# API Configuration
API_TITLE="AI-Native Textbook API"
API_VERSION="1.0.0"
ENVIRONMENT="development"

# OpenAI Configuration
OPENAI_API_KEY="YOUR_OPENAI_KEY"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_CHAT_MODEL="gpt-4-turbo-preview"

# Qdrant Configuration (Vector Database)
QDRANT_URL="https://your-qdrant-instance.qdrant.io"
QDRANT_API_KEY="your-qdrant-api-key-here"
QDRANT_COLLECTION_NAME="textbook_content"

# Neon Postgres Configuration
DATABASE_URL="postgresql://user:password@your-neon-instance.neon.tech/database"

# Better-Auth Configuration
BETTER_AUTH_SECRET="your-secret-key-here-min-32-chars"
BETTER_AUTH_URL="http://localhost:8000"

# Google Translate API Configuration
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key-here"

# Claude API Configuration (for Subagents)
CLAUDE_API_KEY="your-claude-api-key-here"

# RAG Pipeline Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
EMBEDDING_DIMENSIONS=1536
RAG_TOP_K=20
RAG_FINAL_K=5

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS="http://localhost:3000,https://your-github-pages-url.github.io"
